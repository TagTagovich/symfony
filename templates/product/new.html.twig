{% extends 'base.html.twig' %}

 {% block body %}
    <h1>Create new Product</h1>

    {{ include('product/_form.html.twig') }}

    <a href="{{ path('product_index') }}">back to list</a>




{% endblock %}

{% block image %}
{{ form_start(form) }}
    {{ form_row(form.description) }}
<h4 class="d-flex justify-content-between align-items-center w-100 font-weight-bold py-3 mb-4">

    <h3>New Image</h3>
    <ul class="images" data-index="{{ form.images|length > 0 ? form.images|last.vars.name + 1 : 0 }}"
    data-prototype="{{ form_widget(form.images.vars.prototype.image)|e('html_attr') }}">
        
        {% for image in form.images %}
            <li>{{ form_row(image.image) }}</li>
        {% endfor %}
    </ul>
    
{{ form_end(form) }}


{% endblock %}


  

    {% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('con') }}
    {% endblock %}