{% extends 'base.html.twig' %}

{% block title %}Свойства товара{% endblock %}

{% block body %}
<h4 class="d-flex justify-content-between align-items-center w-100 font-weight-bold py-3 mb-4">
    <div>Свойства товара</div>
    
    <a class="btn btn-primary rounded-pill d-block" href="{{ path('product_property_new') }}"><i class="fa fa-plus"></i> Создать свойство товара</a>
</h4>
<div class="card">
    <div class="card-datatable table-responsive">
        <table class="table color-table muted-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Value</th>
                <th>actions</th>
            </tr>
        </thead>
            <tbody>
            {% for product_property in product_properties %}
                <tr>
                <td>{{ product_property.id }}</td>
                <td>{{ product_property.value }}</td>
                <td>
                        <nobr>
                            <a href="{{ path('offer_edit', {'id': offer.id}) }}" class="btn btn-success" title="Редактировать"><i class="fas fa-pencil-alt"></i></a>
                            <a href="{{ path('offer_delete', {'id': offer.id}) }}" class="btn btn-danger" title="Удалить"><i class="far fa-trash-alt"></i></a>
                            {% endif %}
                        </nobr>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
{% endblock %}








