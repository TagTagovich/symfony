{% extends 'base.html.twig' %}

{% block title %}ProductPhoto index{% endblock %}

{% block body %}
    <h1>ProductPhoto index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ImageName</th>
                <th>ImageSize</th>
                <th>UpdatedAt</th>
                <th>TestField</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product_photo in product_photos %}
            <tr>
                <td>{{ product_photo.id }}</td>
                <td>{{ product_photo.imageName }}</td>
                <td>{{ product_photo.imageSize }}</td>
                <td>{{ product_photo.updatedAt ? product_photo.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ product_photo.testField }}</td>
                <td>
                    <a href="{{ path('product_photo_show', {'id': product_photo.id}) }}">show</a>
                    <a href="{{ path('product_photo_edit', {'id': product_photo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_photo_new') }}">Create new</a>
{% endblock %}
